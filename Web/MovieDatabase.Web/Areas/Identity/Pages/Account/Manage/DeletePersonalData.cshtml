@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning alert-alt" role="alert">
    <h4 class="alert-title">Warning</h4>
    <div class="alert-body">
        Deleting this data will permanently remove your account, and this cannot be recovered.
    </div>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div class="alert alert-alt alert-danger mb" role="alert" asp-validation-summary="All"></div>

        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <div class="md-input">
                    <label asp-for="Input.Password" class="md-input-placeholder"></label>
                    <input asp-for="Input.Password" class="md-input-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }

        <button class="btn btn-danger mt" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}